    "dependencies": {
      "@ricky0123/vad-web": "0.0.22",
      "onnxruntime-web": "^1.14.0",
      "cpy": "^8.1.2"              //  ← NEW  (or "cpy-cli": "^4.2.0")
    },
  
    "scripts": {
      "postinstall": "node copy-vad.js"   // path is fine because file is in repo root
    }
  }
  